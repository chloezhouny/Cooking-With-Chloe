<div class = "uk-conatiner">
	<h1 class = "uk-flex uk-flex-center uk-margin-large-top uk-margin-large-bottom">MY FAVORITES</h1> 



<div class = "uk-flex uk-flex-center uk-conatiner" id="recipesContainer">
<div class="uk-child-width-1-3@m uk-conatiner" uk-grid id = "cardContainer">
  {{#each recipes}}
	  	<div>
	        <div class="uk-card uk-card-default">
	            <div class="uk-card-media-top">
	                <img src= {{image}} alt="">
	            </div>
	            <div class="uk-card-body">
	                <a href = "{{link}}"><h3 class="uk-card-title">{{title}}</h3></a>
	                <p>{{content}}</p>


	                 <button class="delete-save uk-button uk-button-secondary" data-id="{{_id}}" data-saved="{{saved}}" type="button">Unsave Me
			    	</button>

			    	<a class="uk-button uk-button-default notes " href="#modal-sections" uk-toggle>Take Note</a>

			    	<div id="modal-sections" uk-modal>
					    <div class="uk-modal-dialog">
					        <button class="uk-modal-close-default" type="button" uk-close></button>
					        <div class="uk-modal-header">
					            <h2 class="uk-modal-title">{{note.title}}</h2>
					        </div>
					        <div class="uk-modal-body">
					            <p>{{note.body}}</p>
					             <input class="uk-input" id="title"  type="text" placeholder="update title here">
					            <input class="uk-input" id="body"  type="text" placeholder="update content here">
					            <br>
					          

					        </div>

					        <div class="uk-modal-footer uk-text-center">
					            <button class="uk-button uk-button-secondary updateNote" data-id = "{{_id}}" type="button">Update Note</button>
					             <button class="uk-button uk-button-secondary deleteNote" recipeId = "{{_id}}" noteId = "{{note}}" type="button">Delete Note</button>
					     
					        </div>
					    </div>
					</div>

	            </div>
	        </div>
    	</div>
  {{/each}}
</div>
</div>
